{
    "compilerOptions": {
        "outDir"           : "./dist",
        "sourceMap"        : true,
        "strict"           : true,
        "noImplicitAny"    : true,
        "strictNullChecks" : true,
        "removeComments"   : true,
        "declaration"      : false,
        "module"           : "commonjs",
        "target"           : "es5",
        "jsx"              : "react"
    },
    "include": [
        "src/**/*.tsx",
        "src/**/*.ts", "typings/index.d.ts"
    ],
    "files" : [
        "src/index.d.ts"
    ],
    "exclude" : [
        "node_modules"
    ]
}