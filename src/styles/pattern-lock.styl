flexCentered()
	display flex
	justify-content center
	align-items center

.react-pattern-lock__pattern-wrapper
	*
		user-select none

.react-pattern-lock__pattern-wrapper
	&.disabled
		.react-pattern-lock__point-wrapper
			.react-pattern-lock__point
				cursor not-allowed
	touch-action: none;
	width 100%
	display flex
	flex-wrap wrap
	position relative
	.react-pattern-lock__connector-wrapper
		position absolute
		top 0
		left 0
		width 100%
		height 100%
		z-index 1
		pointer-events none
		.react-pattern-lock__connector
			position absolute
			transform-origin center left
	.react-pattern-lock__point-wrapper
		flexCentered()
		.react-pattern-lock__point
			cursor pointer
			flexCentered()
			& > div
				border-radius 50%
				&.active
					animation pop 300ms ease

@keyframes pop
	from
		transform scale(1)
	50%
		transform scale(2)
	to
		transform scale(1)