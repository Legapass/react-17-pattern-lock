flexCentered()
	display flex
	justify-content center
	align-items center

.react-pattern-lock__pattern-wrapper
	*
		user-select none

.react-pattern-lock__pattern-wrapper
	touch-action: none;
	width 100%
	display flex
	flex-wrap wrap
	position relative
	.react-pattern-lock__connector-wrapper
		position absolute
		top 0
		left 0
		width 100%
		height 100%
		z-index 1
		pointer-events none
		.react-pattern-lock__connector
			background white
			position absolute
			transform-origin center left
	.react-pattern-lock__point-wrapper
		flexCentered()
		.react-pattern-lock__point
			cursor pointer
			flexCentered()
			.react-pattern-lock__point-inner
				background white
				border-radius 50%
				&.active
					animation pop 300ms ease
	&.disabled
		cursor not-allowed
		.react-pattern-lock__point-wrapper
			 .react-pattern-lock__point
				cursor not-allowed
				.react-pattern-lock__point-inner
					background grey
		.react-pattern-lock__connector-wrapper .react-pattern-lock__connector
			background grey
	&.success
		.react-pattern-lock__point-wrapper .react-pattern-lock__point .react-pattern-lock__point-inner
			background #00ff00
		.react-pattern-lock__connector-wrapper .react-pattern-lock__connector
			background #00ff00
	&.error
		.react-pattern-lock__point-wrapper .react-pattern-lock__point .react-pattern-lock__point-inner
			background red
		.react-pattern-lock__connector-wrapper .react-pattern-lock__connector
			background red

@keyframes pop
	from
		transform scale(1)
	50%
		transform scale(2)
	to
		transform scale(1)