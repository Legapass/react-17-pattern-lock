{
    "parser": "babel-eslint",
    "extends" : "airbnb",
    "env" : {
        "browser": true
    },
    "rules"   : {
        "no-multi-spaces"                   : 0,
        "eol-last"                          : 0,
        "consistent-return"                 : 0,
        "react/jsx-filename-extension"      : 0,
        "no-unused-vars"                    : 1,
        "no-tabs"                           : 0,
        "react/forbid-prop-types"           : 0,
        "react/prefer-stateless-function"   : 1,
        "react/jsx-curly-spacing"           : 0,
        "react/no-array-index-key"          : 0,
        "react/no-did-mount-set-state"      : 0,
        "react/jsx-indent-props"            : ["warn", "tab"],
        "react/jsx-indent"                  : ["warn", "tab"],
        "import/no-extraneous-dependencies" : ["error", { "devDependencies": true }],
        "quotes"                            : ["warn", "double"],
        "indent"                            : ["warn", "tab"],
        "key-spacing"                       : [
            "warn",
            {
                "singleLine": {
                    "beforeColon" : true,
                    "afterColon"  : true
                },
                "multiLine": {
                    "beforeColon" : true,
                    "afterColon"  : true
                },
                "align": {
                    "on"          : "colon",
                    "beforeColon" : true,
                    "afterColon"  : true
                }
            }
        ],
        "no-param-reassign": [
            "error",
            {
                "props": false
            }
        ],
        "comma-dangle": [
            "error",
            "never"
        ],
        "curly": [
            "error",
            "multi-line"
        ],
        "no-use-before-define" : [
            "error",
            {
                "classes"   : false,
                "functions" : false
            }
        ]
    }
}